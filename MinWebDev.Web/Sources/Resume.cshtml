@model MinWebDev.Web.ResumeViewModel

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" href="./resume-icon.png" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="@Model.CandidateName Resume" />
    <title>@Model.CandidateName</title>
    <link href="./site.css" rel="stylesheet" />
</head>

<body>
    <header id="resume-header">
        <h1 id="resume-heading">@Model.CandidateName</h1>
        <i id="resume-tagline">@Html.Raw(Model.CandidateTagline)</i>
    </header>
    <main>
        <section class="resume-section">
            <h2 class="resume-section-title">Education</h2>
            <div class="resume-section-body">
                <table id="education-table">
                    <tbody>
                        @foreach (var schoolAttendance in Model.SchoolAttendances) {
                            @await Html.PartialAsync("_EducationTableRow.cshtml", schoolAttendance)
                        }
                    </tbody>
                </table>
            </div>
        </section>
        <section class="resume-section">
            <h2 class="resume-section-title">Technical Experience</h2>
            <div class="resume-section-body">
                <div id="technical-experience-container">
                    <table class="technical-experience-table">
                        <tbody>
                            @foreach (var skillExperience in Model.SkillExperiencesPart1) {
                                <tr>
                                    <td>@skillExperience.Skill</td>
                                    <td>@skillExperience.Years years</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <table class="technical-experience-table">
                        <tbody>
                            @foreach (var skillExperience in Model.SkillExperiencesPart2) {
                                <tr>
                                    <td>@skillExperience.Skill</td>
                                    <td>@skillExperience.Years years</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <section class="resume-section">
            <h2 class="resume-section-title">Work History</h2>
            <div class="resume-section-body">
                <div id="work-history-grid">
                    <article class="work-history-item">
                        <header class="work-history-item-header">
                            <div>Jan 2021 - Present</div>
                            <div>Full-Stack Web Developer</div>
                            <div>Tech Solutioneering, Inc.</div>
                        </header>
                        <ul class="work-history-item-body-details">
                            <li>
                                Worked directly with clients to provide
                                custom solution development
                            </li>
                            <li>
                                Developed and maintained scalable web
                                applications, using React on the front-end
                                and ASP.NET MVC on the back-end
                            </li>
                            <li>
                                Managed SQL Server databases and employed
                                Sequelize for efficient data handling
                            </li>
                            <li>
                                Collaborated with cross-functional teams
                                and participated in Agile development
                                methodologies using Jira
                            </li>
                        </ul>
                    </article>
                    <article class="work-history-item">
                        <header class="work-history-item-header">
                            <div>Jun 2020 - Dec 2020</div>
                            <div>Junior Developer</div>
                            <div>WebDev Co.</div>
                        </header>
                        <ul class="work-history-item-body-details">
                            <li>
                                Assisted in front-end and back-end
                                development using React, Node.js, and
                                MongoDB
                            </li>
                            <li>
                                Engaged in Git-based version control,
                                participated in code reviews, and used
                                Jira for project management
                            </li>
                            <li>
                                Contributed to the design and development
                                of web applications, working closely with
                                experienced developers
                            </li>
                        </ul>
                    </article>
                    <article class="work-history-item">
                        <header class="work-history-item-header">
                            <div>Jan 2020 - May 2020</div>
                            <div>Electrical Engineer Intern</div>
                            <div>Atlanta PowerTech</div>
                        </header>
                        <ul class="work-history-item-body-details">
                            <li>
                                Assisted senior engineers in electrical
                                design and testing of power distribution
                                systems
                            </li>
                            <li>
                                Conducted research on energy efficiency
                                and contributed to the development of
                                sustainable energy solutions
                            </li>
                            <li>
                                Gained hands-on experience in electrical
                                engineering practices and safety standards
                            </li>
                        </ul>
                    </article>
                    <article class="work-history-item">
                        <header class="work-history-item-header">
                            <div>Sep 2017 - Dec 2019</div>
                            <div>Electrical Engineering Lab Assistant</div>
                            <div>Howard University</div>
                        </header>
                        <ul class="work-history-item-body-details">
                            <li>
                                Assisted students in the electrical
                                engineering lab, providing guidance on
                                experiments and equipment usage
                            </li>
                            <li>
                                Helped maintain lab equipment and ensured
                                a safe and organized environment for
                                students
                            </li>
                        </ul>
                    </article>
                    <article class="work-history-item">
                        <header class="work-history-item-header">
                            <div>May 2014 - Aug 2017</div>
                            <div>Ride Operator</div>
                            <div>Six Flags</div>
                        </header>
                        <ul class="work-history-item-body-details">
                            <li>
                                Operated amusement park rides, ensuring
                                visitor safety and enjoyment
                            </li>
                            <li>
                                Developed strong communication and
                                teamwork skills during high-demand periods
                            </li>
                        </ul>
                    </article>
                </div>
            </div>
        </section>
    </main>
</body>

</html>
